<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="350sp"
    android:minHeight="600sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/md_blue_100"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="5sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginStart="20dp"
            android:layout_width="45dp"
            android:layout_gravity="center"
            android:padding="1sp"
            android:src="@color/md_grey_400"
            android:id="@+id/dialogOpponentImageivew"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/dialogOpponentTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Your Opponent"
            android:layout_marginStart="10sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@color/blackColor"
            android:gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>

    <include layout="@layout/messages_linear_layout"/>

    <LinearLayout
        android:background="@drawable/chat_message_from_round_rectangle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginStart="5sp"
        android:layout_marginEnd="5sp"
        android:layout_height="70sp">

        <EditText
            android:layout_weight="5"
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:maxLines="2"
            android:hint="Enter your message here"
            />

        <ImageButton
            android:id="@+id/messagePushButton"
            android:background="@drawable/push_button_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/push_image"/>

    </LinearLayout>

</LinearLayout>