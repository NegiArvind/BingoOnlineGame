<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Choose Any One Of The Default Bingo Matrix"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/blackColor"
        android:gravity="center"/>

    <LinearLayout
        android:layout_weight="3"
        android:layout_marginTop="50sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/bingo1ImageView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:background="@color/blackColor"
            android:padding="1dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_height="wrap_content"
            android:src="@drawable/bingo_image1"/>

        <ImageView
            android:id="@+id/bingo2ImageView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:background="@color/blackColor"
            android:padding="1dp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:layout_height="wrap_content"
            android:src="@drawable/bingo_image2"/>

        <ImageView
            android:id="@+id/bingo3ImageView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:background="@color/blackColor"
            android:padding="1dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bingo_image3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:layout_height="0dp">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/bingo4ImageView"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:background="@color/blackColor"
            android:padding="1dp"
            android:layout_marginEnd="10sp"
            android:layout_height="wrap_content"
            android:src="@drawable/bingo_image4"/>

        <ImageView
            android:id="@+id/bingo5ImageView"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:scaleType="fitXY"
            android:background="@color/blackColor"
            android:padding="1dp"
            android:layout_marginStart="10sp"
            android:layout_height="wrap_content"
            android:src="@drawable/bingo_image5"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>

    <View
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


</LinearLayout>